mixin header(header__svg)
	.header__title
		svg.header__title-pic
			use(xlink:href=header__svg)

mixin skills-list(skill, text, count)
		li.skills-list__item
			.skill-row
				.skills-row__title= skill
				ul.skills-row__list
					- for (var i = 0; i < count; i++) {
						li.skills-row__item
							svg.skills-row__circle(viewBox='0 0 110 110')
								circle(cx='50%' cy='50%' r='45' fill='none' class='skill-row__circle-first')
								circle(cx='50%' cy='50%' r='45' fill='none' class='skill-row__circle-second' transform='rotate(-90 55 55)')
							.skills-row__text= text[i]	
					- }

mixin contact(path, link, text)
	li.contacts__item
		a.contacts__link(href=link)
			svg.contacts__icon
				use(xlink:href=path)
			.contact__text=text

mixin social(path, link)
	li.socials__item
		a.socials__link(href='link')
			.socials__link-img
				svg(width='30' height='22' class='in')
					use(xlink:href=path)

mixin slider-button(id, bg, path)
	button(id=id).slider__button
		.slider__button-bg
		.slider__button-svg.button__pos
			include ../common/arrow

mixin slider-block(name, number, title, text, link)
	li.slide(class= name)
		div.slider__bg(class='slider__bg-'+ number)
		.slider__block.showing
			h2.block-subtitle=title
			.slider__block-text=text
			.slider__block-img
				.slider__block-pic
					svg.slider__block-svg(width='30' height='22')
						use(xlink:href='../assets/images/sprite.svg#link')
				a(href="link" class='slider__block-link button') Посмотреть сайт

mixin arrow(name, width, height)
	svg(class= name, class="arrow" width= width height= height)
		<use xlink:href='../assets/images/sprite.svg#arrow_down'>

mixin menu(name, secondclass)
	nav(class= name)
		ul(class= name +'__list')
			li(class= name +'__item')
				a(class= name +'__link' class= secondclass  href='my-works.html')
					| Мои работы
			li(class= name +'__item')
				a(class= name +'__link' class= secondclass href='about.html')
					| Обо мне
			li(class= name +'__item')
				a(class= name +'__link' class= secondclass href='blog.html')
					| Блог
			li(class= name +'__item')
				a(class= name +'__link' class= secondclass href='index.html')
					| Авторизация

mixin select__menu()
	ul.select__list
		li.select__item
			a.select__link
