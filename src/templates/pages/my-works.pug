extends ../template

block variables
	- var title = 'Мои работы'
	- var userName = 'user__name'
	- var blogName = 'Линкер Алексей'

block header
	include ../common/arrow_down
	include ../common/header	



block content 
	section.section.my-work
		.triangle__white
			include ../common/triangle
		h1.block-title Мои работы
		.block-title__pic.my-work__pic
			svg.block-title__svg
				use(xlink:href='../assets/images/sprite.svg#works_header')

	section.section.my-job
		.school
			h2.block-subtitle Сайт школы онлайн образования
			.school__text HTML, CSS, JavaScript
			.school__block
				.school__pic
					svg.shool__svg
						use(xlink:href='../assets/images/sprite.svg#link')
				a(href="loftschool.ru" class='school__link button') Посмотреть сайт
		.slider


	.my-work__bg

		section.section.reviews
			h1.block-title.reviews__title Что обо мне говорят
				.reviews__title-pic.block-title__pic
					svg.about__left-svg.block-title__svg
						use(xlink:href='../assets/images/sprite.svg#about_header')
			.reviews__feedback
				ul.reviews__list
					li.reviews__item
						.feedback
							.feedback__img
								img.feedback__img-pic(src="../../assets/images/content/dima.jpg")
							.feedback__text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
							.feedback__people
								.feedback__people-name Ковальчук Дмитрий
								.feedback__people-post — основатель Loftschool
					li.reviews__item
						.feedback
							.feedback__img
								img.feedback__img-pic(src="../../assets/images/content/vova.jpg")
							.feedback__text Этот код выдержит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!
							.feedback__people
								.feedback__people-name Сабанцев Владимир
								.feedback__people-post —  преподователь

			.reviews__form
				form.form
					.form__up
						.block-subtitle.form__title Связаться со мной
						.form__row
							input.form__input(type="text" placeholder="Имя")
						.form__row
							input.form__input(type="text" placeholder="Email")
						.form__row
							textarea.form__area(placeholder="Ваше сообщение")
					.form__down
						.form__btn
							button(type="submit").button.form__btn-style Отправить
							button(type="reset").button.form__btn-style Очистить

				
		//- include ../common/slider.pug

		include ../common/footer