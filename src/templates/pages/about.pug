extends ../template
include ../mixins/mixins

block variables
	- var title = 'Обо мне'
	- var userName = 'user__name'
	- var blogName = 'Линкер Алексей'

block header
	include ../common/arrow_down
	include ../common/header

block content 


	main.section.about
		include ../common/triangle
		.about__left
			.about__left-title
				h1.block-title Обо мне
				.about__left-pic.block-title__pic
					svg.about__left-svg.block-title__svg
						use(xlink:href='../assets/images/sprite.svg#about_header')
			.about__left-content
				.user-description
					.user-description__image
						img.user-description__avatar(src="../assets/images/content/user1.jpg", alt="")
					.user-description_title
						h2.block-subtitle Кто я
					.user-description__text.text-content
						.text__content-block
							p Я веб разработчик из Новосибирска. Мне 27 лет. 
							p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
						.text__content-block
							p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите,как тут всё классно и красиво!
		.about__right
			.about__right-text
				.about__right-title
					.block-subtitle Чем я могу быть вам полезен
				.about__right-description.text-content
					.text__content-block
						p Больше всего меня привлекет Frontend разработка, но я также знаком и могу решать не сложные задачи на Backend. Но давайте по порядку.
			.about__right-content
				ul.skills-list
					+skills-list('Frontend', ['HTML5', 'CSS3', 'JavaScript & jQuery'], '3')
					+skills-list('Backend', ['PHP', 'mySQL', 'Node.js & npm', 'MongoDb'], '4')
					+skills-list('WorlFlow', ['Git', 'Gulp', 'WebPack'], '3')
	section.section.map
		.g-map
		.map__data
			.contacts
				.block-subtitle.contacts-block Контакты
				ul.contacts__list
					+contact('../assets/images/sprite.svg#skype', 'skype:fashic', 'fashic')
					+contact('../assets/images/sprite.svg#envelope2', 'mailto:fashic@bk.ru', 'fashic@bk.ru')
					+contact('../assets/images/sprite.svg#phone2', 'tel:+79384267234', '+79384267234')
					+contact('../assets/images/sprite.svg#map_marker', 'https://www.google.ru/maps/@45.0583177,39.007864,15z', 'Краснодар ул. 40 лет Победы 33/10')

	include ../common/footer